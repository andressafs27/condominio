<!-- formulário -->
<div class="container">
  <div class="page-inner">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-title">Cadastrar Veículo</div>
          </div>
          <div class="card-body">
            <div class="row">
              <!-- Primeira Coluna -->
              <div class="col-md-6">
                <div class="form-group">
                  <label for="cpf">CPF:</label>
                  <div class="input-group">
                    <input type="text" id="cpf" name="cpf" class="form-control" required />
                    <button type="button" id="btnBuscarPessoa" class="btn btn-primary">Buscar</button>
                    <input type="hidden" id="pessoa_id" name="pessoa_id">
                  </div>
                  <small id="erro-cpf" style="color: red; display: none;">CPF não encontrado</small>
                </div>

                <div class="form-group">
                  <label for="modelo">Modelo</label>
                  <input type="text" class="form-control veiculo" id="modelo" placeholder="Digite o Modelo" disabled required />
                </div>

                <div class="form-group">
                  <label for="placa">Placa</label>
                  <input type="text" class="form-control veiculo" id="placa" placeholder="Digite a Placa" disabled required />
                </div>
              </div>

              <!-- Segunda Coluna -->
              <div class="col-md-6">
                <div class="form-group">
                  <label for="nomePessoa">Nome do Responsável:</label>
                  <input type="text" id="nomePessoa" class="form-control" disabled />
                </div>

                <div class="form-group">
                  <label for="marca">Marca</label>
                  <input type="text" class="form-control veiculo" id="marca" placeholder="Digite a Marca" disabled required />
                </div>

                <div class="form-group">
                  <label for="cor">Cor</label>
                  <input type="text" class="form-control veiculo" id="cor" placeholder="Digite a Cor" disabled required />
                </div>
              </div>
            </div>
          </div>

          <div class="card-action d-flex gap-2 ">
            <button class="btn btn-success py-2" style="width: 120px; height: 40px; border-radius:5px" type="button" id="btnCadastrar" disabled>Cadastrar</button>
            <button class="btn btn-danger py-2" style="width: 100px; height: 40px; border-radius:5px" type="button" onclick="window.location.href='/veiculo/listar'">Voltar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/veiculo/cadastrar.js"></script>
