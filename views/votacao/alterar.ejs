
<!-- formulario -->

<div class="container">
    <div class="page-inner">
        
        <div class="row">
        <div class="col-md-12">
            <div class="card">
            <div class="card-header">
                <div class="card-title">Alterar Votação</div>
            </div>

            <div class="card-body">
                <div class="row">
                <!-- Primeira Coluna -->
                <div class="col-md-6">
                    <input type="hidden" id="id" value="<%= votacao.id %>">
                    <input type="hidden" id="pauta_id" value="<%= pauta.id %>" />


                    <div class="form-group">
                        <label for="data_inicio">Data de Início da Votação</label>
                        <input
                          type="date"
                          class="form-control"
                          id="data_inicio"
                          maxlength="10"
                          value="<%= votacao && votacao.data_inicio instanceof Date ? votacao.data_inicio.toISOString().split('T')[0] : '' %>"
                        />
                    </div>

                    <div class="form-group">
                        <label for="pauta_id">Pauta</label>
                        <input type="text" class="form-control" value="<%= pauta.descricao %>" readonly />
                        <input type="hidden" id="pauta_id" value="<%= pauta.id %>" />
                    </div>
                    

                </div>

                <!-- Segunda Coluna -->
                <div class="col-md-6">

                    <div class="form-group">
                        <label for="data_fim">Data de Fim da Votação</label>
                        <input
                          type="date"
                          class="form-control"
                          id="data_fim"
                          maxlength="10" 
                          value="<%= votacao && votacao.data_fim instanceof Date ? votacao.data_fim.toISOString().split('T')[0] : '' %>"

                        />
                    </div>

                    <div class="form-group">
                        <label for="status">Status</label>
                        <select name="status" class="form-control" id="status">
                            <option value="1" <%= votacao.status === 1 ? 'selected' : '' %>>Aberta</option>
                            <option value="0" <%= votacao.status === 0 ? 'selected' : '' %>>Fechada</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card-action">
                <button class="btn btn-success cadastrar" id="btnAlterar" type="button">Alterar</button>
                <button class="btn btn-danger" type="button" onclick="window.location.href='/votacao/listar'">Voltar</button>
            </div>
            </div>
        </div>
        </div>
    </div>
    </div>
    <script src="/js/votacao/alterar.js"></script>
     
        
