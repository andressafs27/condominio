<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<div class="container">
    <div class="page-inner">
        <div class="page-header d-flex justify-content-between align-items-center">
            <h3 class="fw-bold">Votações</h3>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables" class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th class="w-25">Pauta</th>
                                        <th class="text-center">Sim <i class="bi bi-check-circle-fill" style="color: #28a745;"></i></th>
                                        <th class="text-center">Não <i class="bi bi-x-circle-fill" style="color: #dc3545"></i></th>
                                        <th class="text-center">Total de Votos</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Editar</th>
                                    </tr>
                                </thead>                                
                                <tbody>
                                    <% for (let i = 0; i < lista.length; i++) { %>
                                    <tr>
                                        <td><%= lista[i].pauta_descricao %></td>
                                        <td class="text-center"><%= lista[i].total_votos_sim %></td>
                                        <td class="text-center"><%= lista[i].total_votos_nao %></td>
                                        <td class="text-center"><%= lista[i].total_votos %></td>
                                        <td class="text-center"><%= lista[i].status %></td>
                                        <td>
                                            <a href="/votacao/pauta/<%= lista[i].pauta_id %>/alterar" class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                                            </svg></a>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>