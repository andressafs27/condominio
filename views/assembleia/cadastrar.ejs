
  
        <!-- formulario -->
   
        <div class="container">
            <div class="page-inner">
              <div class="row">
                <div class="col-md-12">
                  <div class="card">
                    <div class="card-header">
                      <div class="card-title">Agendar Assembleia</div>
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <!-- Primeira Coluna -->
                        <div class="col-md-6">

                          <div class="form-group">
                            <label for="data_nascimento">Data</label>
                            <input
                              type="date"
                              class="form-control"
                              id="data"
                            />
                          </div>
  
                        </div>
                        
                        <!-- Segunda Coluna -->
                        <div class="col-md-6">
                          
                          <div class="form-group">
                            <label for="cpf">Horário</label>
                            <input
                              type="time"
                              class="form-control"
                              id="horario"
                            />
                          </div>
  
                        </div>
  
                        <div class="row mt-3">
                          <div class="col-md-12">
                            <div class="form-group">
                              <label>Pautas</label>
                              <div id="pautasContainer">
                                <div class="pautas-item row mb-2">
                                  
                                  <div class="col-md-3 col-8 mb-1">
                                    <input type="text" class="form-control pauta" id="descricao" placeholder="Descrição da Pauta" required>
                                  </div>
            
                                  <div class="col-md-1 col-4 d-flex align-items-center">
                                    <button type="button" class="btn btn-danger btn-sm remover-pauta">X</button>
                                  </div>

                                </div>
                              </div>
                              <button type="button" class="btn btn-secondary mt-2" id="btnAdicionarPauta">+ Adicionar Pauta</button>
                            </div>
                          </div>
                        </div>
                      </div>
  
                      </div>
                    </div>
                    <div class="card-action">
                      <button class="btn btn-success cadastrar" id="btnCadastrar" type="button">Agendar</button>
                      <button class="btn btn-danger" type="button" onclick="window.location.href='/assembleia/listar'">Voltar</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <script src="/js/assembleia/cadastrar.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        