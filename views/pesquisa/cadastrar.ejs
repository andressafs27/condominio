
  
<!-- formulario -->

<div class="container">
  <div class="page-inner">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-title">Cadastrar Pesquisa</div>
          </div>
          <div class="card-body">
            <div class="row">
              <!-- Primeira Coluna -->
              <div class="col-md-6">

                <div class="form-group">
                  <label for="titulo">Titulo</label>
                  <input
                    type="text"
                    class="form-control"
                    id="titulo"
                  />
                </div>

                <div class="form-group">
                  <label for="data">Data</label>
                  <input
                    type="date"
                    class="form-control"
                    id="data"
                    maxlength="10" 
                  />
                </div>
              
                <div class="form-group">
                  <label for="data_fim">Data de encerramento</label>
                  <input
                    type="date"
                    class="form-control"
                    id="data_fim"
                    maxlength="10" 
                  />
                </div>

              </div>

              
              <!-- Segunda Coluna -->
              <div class="col-md-6">
                
                <div class="form-group">
                  <label for="status">Status</label>
                  <select class="form-control" id="status">
                    <option value="1">Ativo</option>
                    <option value="0">Inativo</option>
                  </select>
                </div>

              </div>
            </div>
          </div>
          <!-- Perguntas Cadastradas -->
          <div class="form-group">
            <label>Perguntas</label>
            <div id="perguntasContainer">
              <% perguntas.forEach(p => { %>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="pergunta" id="pergunta<%= p.id %>" value="<%= p.id %>">
                  <label class="form-check-label" for="pergunta<%= p.id %>"><%= p.enunciado %></label>
                </div>
              <% }) %>
            </div>
          </div>
          

          <div class="card-action">
            <button class="btn btn-success cadastrar" id="btnCadastrar" type="button">Cadastrar</button>
            <button class="btn btn-danger" type="button" onclick="window.location.href='/pesquisa/listar'">Voltar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/pesquisa/cadastrar.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        