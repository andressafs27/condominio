
  
        <!-- formulario -->
   
        <div class="container">
            <div class="page-inner">
              <div class="row">
                <div class="col-md-12">
                  <div class="card">
                    <div class="card-header">
                      <div class="card-title">Agendar serviço</div>
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <div class="col-md-6">

                          <div class="form-group">
                            <label for="data">Data</label>
                            <input
                              type="date"
                              class="form-control"
                              id="data"
                            />
                          </div>
                             </div>
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="data_final">Data Final</label>
                            <input
                              type="date"
                              class="form-control"
                              id="data_final"
                            />
                          </div>
  
                        </div>
                        
                        <!-- Segunda Coluna -->
                        <div class="col-md-6">
                          
                          <div class="form-group">
                            <label for="descricao">Descricao</label>
                            <input
                              type="text"
                              class="form-control"
                              id="descricao"
                              placeholder="Descrição do Agendamento"
                            />
                          </div>
  
                        </div>
  
  
                        <div class="form-group">
                            <label for="bloco_id">Número do Bloco</label>
                            <select class="form-control" id="bloco_id" name="bloco_id" required>
                              <option value="">Selecione um bloco</option>
                              <% blocos.forEach(bloco => { %>
                                <option value="<%= bloco.id %>"><%= bloco.numero %></option>
                              <% }) %>
                            </select>
                          </div>

                          <div class="form-group">
                            <label for="servico_id">Serviço</label>
                            <select class="form-control" id="servico_id" name="servico_id" required>
                              <option value="">Selecione um serviço</option>
                              <% servicos.forEach(servico => { %>
                                <option value="<%= servico.id %>"><%= servico.descricao %></option>
                              <% }) %>
                            </select>
                          </div>

                      </div>
  
                      </div>
                    </div>
                    <div class="card-action">
                      <button class="btn btn-success cadastrar" id="btnCadastrar" type="button">Agendar</button>
                      <button class="btn btn-danger" type="button" onclick="window.location.href='/agenda/listar'">Voltar</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <script src="/js/agenda/cadastrar.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        