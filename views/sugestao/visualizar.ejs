

<!-- formulario -->

<div class="container">
  <div class="page-inner">
    
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-title">Sugestão</div>
          </div>
          <div class="card-body">
            <div class="row">
              <!-- Primeira Coluna -->
              <div class="col-md-8">
                <div class="form-group">
                  <label for="descricao">Descrição</label>

                  <textarea
                    name="descricao"
                    class="form-control"
                    id="descricao"
                    disabled
                  ><%= sugestao ? sugestao.descricao : '' %></textarea>

                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                  <label for="data" >Data</label>
                  <input
                    id="data"
                    type="date"
                    class="form-control"
                    value="<%= sugestao && sugestao.data instanceof Date ? sugestao.data.toISOString().split('T')[0] : '' %>"
                    disabled

                    />
                </div>
              </div>

            </div>
            <div class="form-group">
              <!-- <button class="btn btn-success desabilitar" id="btnDesabilitar" type="button">Desativar</button> -->
              <button style="width: 120px; height: 40px; border-radius:5px" class="btn btn-danger py-2" type="button" onclick="window.location.href='/sugestao/listar'">Voltar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
